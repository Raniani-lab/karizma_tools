<odoo>

    <!-- Branding Login Layout -->
    <template id="login_layout_extend_11" name="Login Layout Extend" inherit_id="web.login_layout">
        <xpath position="replace" expr="//div[1]">
            <div class="row" style="margin-top: 15px;">
                <t t-set="company_debrand" t-value="request.env['res.company'].sudo().search([])"/>
                <div class="col-lg-6 offset-lg-3 o_database_list">
                    <div class="text-center" t-if="company_debrand and company_debrand[0] and company_debrand[0].company_logo">
                        <img t-att-src="'data:image/png;base64,%s' % to_text(company_debrand[0].company_logo or '')"
                        width="180px" height="80px"/>
                    </div>
                    <div class="text-center" t-if="not company_debrand and company_debrand[0] and company_debrand[0].company_logo">
                        <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"/>
                    </div>
                    <t t-raw="0"/>
                    <div class="text-center" t-if="not disable_footer">
                        <t t-if="not disable_database_manager">
                            <a class="" href="/web/database/manager">Manage Databases</a> |
                        </t>
                        <t>
                            <a t-att-href="company_debrand and company_debrand[0] and company_debrand[0].company_debrand or ''"
                               target="_blank">Powered by
                            <span t-esc="company_debrand and company_debrand[0] and company_debrand[0].company_name or ''"/></a>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <!--put the company logo or the fav icons path here in href-->
    <template id="web_layout_extend" inherit_id="web.layout">
        <xpath expr="//title" position="replace">
            <t t-set="company_debrand" t-value="request.env['res.company'].sudo().search([])"/>
            <title><t t-esc="(title or '') + ' ' + str(company_debrand and company_debrand[0] and company_debrand[0].company_name)"/></title>
        </xpath>
        <xpath position="replace" expr="//link[@rel='shortcut icon']"><t>
            <link type="image/x-icon" rel="shortcut icon"
                  t-att-href="'data:image/png;base64,%s' % to_text(company_debrand and company_debrand[0] and company_debrand[0].favicon or '')"
                  /></t>
        </xpath>
    </template>
    <!-- Debrand Assets -->
    <template id="title_extend" name="Extend Title" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/odoo-debrand/static/src/js/title.js"/>
        </xpath>
    </template>
