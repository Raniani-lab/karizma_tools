<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="crm.crm_lead_opportunities_tree_view">
            <field name="name">Pipeline</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">kanban,tree,graph,pivot,form,calendar,activity</field>
            <field name="domain">[('type','=','opportunity')]</field>
            <field name="context">{
                    'default_type': 'opportunity',
                    'search_default_saleschannel': 1
            }</field>
            <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
        </record>

    <record id="crm_lead_form" model="ir.ui.view">
            <field name="name">crm.lead.form.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="replace">
                </xpath>
                <xpath expr="//label[@for='street']" position="replace">
                    <label for="street" string="Address" invisible="1"/>
                </xpath>
                 <xpath expr="//div[hasclass('o_address_format')]" position="replace">
                     <div class="o_address_format">
                         <field name="street" placeholder="Street..." class="o_address_street" invisible="1"/>
                         <field name="street2" placeholder="Street 2..." class="o_address_street" invisible="1"/>
                         <field name="city" placeholder="City" class="o_address_city" invisible="1"/>
                         <field name="state_id" class="o_address_state" placeholder="State" invisible="1"
                                options="{&quot;no_open&quot;: True}"/>
                         <field name="zip" placeholder="ZIP" class="o_address_zip" invisible="1"/>
                         <field name="country_id" placeholder="Country" invisible="1" class="o_address_country"
                                options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                     </div>
                </xpath>
                <xpath expr="//page[1]" position="after">
                    <page string = "Signaletic form" name = "signe" >
                        <group string="Specific informations">
                            <group>
                                <field name="denomination"/>
                                <field name="creation_year"/>
                                <field name="effectif"/>
                                <label for="street" string="Address"/>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="country_id" placeholder="Country" class="o_address_state" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    </div>
                                    <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                            </group>
                            <group>
                                <field name="activity_sector"/>
                                <field name="activity"/>
                                <field name="rc"/>
                                <field name="capital"/>
                            </group>
                        </group>
                        <group >
                            <group>
                                <field name="legal_status" widget="radio" />
                            </group>
                            <group>
                                <field name="turnover" widget="radio"/>
                            </group>
                        </group>
                    </page>
                    <page name="qualification" string="Qualification">
                        <group>
                            <group>
                                <field name="existing"/>
                                <field name="futur_users"/>
                                <field name="reprisal_data" widget="radio" options="{'horizontal': true}"/>
                                <field name="method" attrs="{'invisible': [('reprisal_data', '=', 'n')]}"/>
                                <field name="nature" attrs="{'invisible': [('reprisal_data', '=', 'n')]}"/>
                                <field name="size" attrs="{'invisible': [('reprisal_data', '=', 'n')]}" />
                            </group>
                            <group>
                                <field name="specific_need"/>
                                <field name="specifications"/>
                            </group>
                        </group>
                        <separator string = "Perimeter"/>
                        <field name="perimeter"  widget="many2many_checkboxes" nolabel="1" style="display: block;"/>
                    </page>
                </xpath>
            </field>
        </record>
</odoo>
