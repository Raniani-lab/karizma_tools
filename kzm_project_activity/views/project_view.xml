
<odoo>


    <record id="project.open_view_project_all" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">kanban,form,activity</field>
            <field name="view_id" ref="project.view_project_kanban"/>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new project
                </p><p>
                    Or <a type="action" name="%(project.ir_actions_server_project_sample)d" tabindex="-1">activate a sample project</a> to play with.
                </p>
            </field>
        </record>

    <record id="project_task_action_activity_enhanced" model="ir.actions.act_window">
            <field name="name">My Activities</field>
            <field name="res_model">project.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban,calendar</field>
            <field name="view_id" ref="project.project_task_view_tree_activity"/>
            <field name="context">{'search_default_activities_my':1}</field>
            <field name="help" type="html">
                <p>
                    Currently there are not any activity scheduled.
                </p>
            </field>
    </record>
    <record id="project_view_kanban" model="ir.ui.view">
        <field name="name">project.project.kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_manage_reports')]/div[last()]" position="after">
                    <div>
                        <a name="%(project.mail_activity_type_action_config_project_types)d" type="action">Activities</a>
                    </div>
                <field name="activity_ids" widget="kanban_activity"/>
            </xpath>
            <xpath expr="//div[hasclass('o_project_kanban_boxes')]" position="inside">
                <field name="activity_ids" widget="kanban_activity"/>
            </xpath>
        </field>
    </record>

    <record id="project_view_form" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_chatter')]" position="inside">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
