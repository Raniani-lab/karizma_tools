
<odoo>

    <record id="project_task_action_activity_enhanced" model="ir.actions.act_window">
            <field name="name">My Activities</field>
            <field name="res_model">project.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban,calendar</field>
            <field name="view_id" ref="project.project_task_view_tree_activity"/>
            <field name="context">{'search_default_activities_my':1}</field>
            <field name="help" type="html">
                <p>
                    Currently there are not any activity scheduled.
                </p>
            </field>
        </record>


    <record id="project_view_form" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_chatter')]" position="inside">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </xpath>
        </field>
    </record>

</odoo>
