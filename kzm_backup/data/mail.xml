<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="kzm_backup_email_template" model="mail.template">
          <field name="name">Kzm backup e-mail template</field>
          <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
          <field name="subject">Backup failed for ${object.db_name}</field>
          <field name="email_to">${object.email|safe}</field>
          <field name="lang">${object.lang}</field>
          <field name="model_id" ref="kzm_backup.model_kzm_instance"/>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
	      <p></p>
	    ]]>
	  </field>
       </record>
    </data>
</odoo>